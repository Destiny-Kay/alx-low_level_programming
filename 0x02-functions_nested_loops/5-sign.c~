#include "main.h"

/**
 *print_sign- returns the sign of a number
 *Description: checks whether a number is -ve, +ve or 0
 *Return: 1- positive, 0- zero, -1- negative
 *
 */
int print_sign(int n)
{
if (n > 0)
{
_putchar('+');
return (1);
}
else if (n == 0)
{
_putchar('0');
return (0);
}else if (n < 0)
{
_putchar('-');
return (-1);
}
}
